<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.senaijandira.controlefinanceiro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Controle Financeiro"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_adicionar_categoria"
            android:label="@string/title_activity_adicionar_categoria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cadastrar_ganho_Activity"
            android:label="@string/title_activity_cadastrar_ganho_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mudar_tela_Activity"
            android:label="@string/title_activity_mudar_tela"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.controlefinanceiro.HomeActivity" />
        </activity>
    </application>

</manifest>